{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 500,
  "title": "Tourist Gender Distribution",
  "data": {
    "url": "./Dataset/arrivals_gender.csv",
    "format": {
      "type": "csv"
    }
  },
  "encoding": {
    "color": {
      "field": "gender",
      "type": "nominal",
      "scale": {
        "range": ["#FC8EAC", "#1f77b4"]
      },
      "legend": {"title": "Gender"}
    },
    "theta": {"field": "total_arrivals", "type": "quantitative"},
    "tooltip": [
      {"field": "gender", "title": "Gender"},
      {"field": "total_arrivals", "title": "Total Arrivals", "format": ","}
    ]
  },
  "layer": [
    {
      "mark": {
        "type": "arc",
        "innerRadius": 100,
        "outerRadius": 180,
        "tooltip": true
      },
      "selection": {
        "gender_selection": {
          "type": "multi",
          "fields": ["gender"],
          "bind": "legend"
        }
      },
      "encoding": {
        "color": {
          "condition": {
            "param": "gender_selection",
            "field": "gender",
            "type": "nominal",
            "scale": {
              "range": ["#FC8EAC", "#1f77b4"]
            }
          },
          "value": "lightgray"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "text": "Total Arrivals: \n70,577,895",
        "align": "center",
        "baseline": "middle",
        "fontSize": 15,
        "color": "black"
      },
      "encoding": {
        "x": {"value": 250},
        "y": {"value": 250}
      }
    }
  ]
}
