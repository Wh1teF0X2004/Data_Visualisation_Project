{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json", 
  "height": 500,
  "width": 1000, 
  "title": "Tourist Arrivals to Malaysia",
  "projection": {"type": "equirectangular"}, 
  "layer": [
    {
      "data": {
        "url": "./oceans.topojson", 
        "format": {"type": "topojson", "feature": "oceans"}
      }, 
      "mark": {"type": "geoshape", "fill": "cornflowerblue"}
    },
    {
      "data": {
        "url": "./WorldMapWithGraticules.topojson", 
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      }, 
      "mark": {"type": "geoshape", "fill": "lightslategray", "stroke": "white"}
    }, 
    {
      "data": {
        "url": "./WorldMapWithGraticules.topojson", 
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      }, 
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    }, 
    {
      "data": {
        "url": "./Dataset/arrivals_foreign_countries.csv"
      }, 
      "transform": [
        {
          "calculate": "112.5183", 
          "as": "target_longitude"
        },
        {
          "calculate": "2.1976", 
          "as": "target_latitude"
        }
      ], 
      "mark": {
        "type": "line", 
        "color": "black",
        "strokeWidth": 2, 
        "interpolate": "monotone"  
      }, 
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"}, 
        "latitude": {"field": "latitude", "type": "quantitative"},   
        "longitude2": {"field": "target_longitude"},  
        "latitude2": {"field": "target_latitude"},  
        "size": {
          "field": "total_arrival", 
          "type": "quantitative", 
          "title": "Arrival Counts"
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "total_arrival", "type": "quantitative", "format": ",", "title": "Total Arrivals"}
        ]
      }
    }
  ]
}
