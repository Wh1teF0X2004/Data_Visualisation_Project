{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 500,
  "data": {"url": "./Dataset/main-purpose-of-visit.csv"},
  "transform": [
    {"filter": "datum.Total != null"},
    {
      "fold": [
        "Singapore",
        "Thailand",
        "Indonesia",
        "Brunei",
        "Philippines",
        "Vietnam",
        "China",
        "Japan",
        "South Korea",
        "Taiwan",
        "India",
        "Pakistan",
        "Saudi Arabia",
        "United Arab Emirates",
        "Oman",
        "Kuwait",
        "Iran",
        "Canada",
        "United States",
        "United Kingdom",
        "Ireland",
        "Sweden",
        "Denmark",
        "Finland",
        "Norway",
        "Italy",
        "Spain",
        "France",
        "Belgium",
        "Netherland",
        "Germany",
        "Switzerland",
        "Russia",
        "Australia",
        "New Zealand",
        "South Africa",
        "Central Asia",
        "Other Asean",
        "Other East Asia",
        "Other South Asia",
        "Other West Asia",
        "Other Americas",
        "Other Europe",
        "Others"
      ],
      "as": ["Country", "Total"]
    },
    {
      "filter": "selected_country == 'All' || datum.Country == selected_country"
    },
    {
      "aggregate": [{"op": "sum", "field": "Total", "as": "TotalVisitors"}],
      "groupby": ["Main Purpose of Visit"]
    }
  ],
  "params": [
    {
      "name": "visit_purpose",
      "select": {
        "type": "point",
        "fields": ["Main Purpose of Visit"],
        "on": "click",
        "empty": "none"
      }
    },
    {
      "name": "selected_country",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "Singapore",
          "Thailand",
          "Indonesia",
          "Brunei",
          "Philippines",
          "Vietnam",
          "China",
          "Japan",
          "South Korea",
          "Taiwan",
          "India",
          "Pakistan",
          "Saudi Arabia",
          "United Arab Emirates",
          "Oman",
          "Kuwait",
          "Iran",
          "Canada",
          "United States",
          "United Kingdom",
          "Ireland",
          "Sweden",
          "Denmark",
          "Finland",
          "Norway",
          "Italy",
          "Spain",
          "France",
          "Belgium",
          "Netherland",
          "Germany",
          "Switzerland",
          "Russia",
          "Australia",
          "New Zealand",
          "South Africa",
          "Central Asia",
          "Other Asean",
          "Other East Asia",
          "Other South Asia",
          "Other West Asia",
          "Other Americas",
          "Other Europe",
          "Others"
        ],
        "name": "Select Country: "
      }
    },
    {
      "name": "legend_highlight",
      "select": {"type": "point", "fields": ["Main Purpose of Visit"]},
      "bind": "legend"
    }
  ],
  "layer": [
    {
      "mark": {"type": "arc", "innerRadius": 30, "tooltip": true},
      "encoding": {
        "theta": {"field": "TotalVisitors", "type": "quantitative"},
        "radius": {
          "field": "TotalVisitors",
          "type": "quantitative",
          "scale": {"type": "sqrt", "range": [50, 150]}  
        },
        "color": {
          "field": "Main Purpose of Visit",
          "type": "nominal",
          "scale": {"scheme": "category20"}
        },
        "opacity": {
          "condition": {"param": "legend_highlight", "value": 0.9},
          "value": 0.2
        },
        "tooltip": [
          {
            "field": "Main Purpose of Visit",
            "type": "nominal",
            "title": "Main Purpose of Visit"
          },
          {
            "field": "TotalVisitors",
            "type": "quantitative",
            "title": "Total Visitors (Thousands)",
            "format": ",.0f"
          }
        ]
      }
    }
  ]
}
